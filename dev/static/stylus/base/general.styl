// ОБЩИЕ СТИЛИ

[v-cloak]
  display none

.container 
	width 100%
	max-width 1200px
	margin 0 auto
	@media (max-width: 1200px) 
		padding 0 15px

.overflow-hidden
	overflow hidden

.rouble-icon
	font-family font-rouble
	overflow hidden
	position relative
	font-style normal
	&:before
		content "i"

.remodal-wrapper
	@media (max-width breakpoint-md)
		padding 0

// футер к низу

.wrapper
	height 100%
	display flex
	flex-direction column

.main 
	flex 1
	@media (max-width breakpoint-md)
		padding-top 50px
		&.not-paddding-top
			padding-top 0

.blocker
	z-index 100
	.modal
		border-radius 0
		a.close-modal
			display none