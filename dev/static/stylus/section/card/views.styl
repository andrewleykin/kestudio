.card-views
  width 100%
  max-width 500px
  flex auto
  display flex
  align-self flex-start
  flex none

.card-views__thumbs
  width 60px
  margin-right 50px

.card-views__thumbs-slider
  height 380px

.card-views__thumbs-slide
  cursor pointer
  &+&
    margin-top 20px

.card-views__thumbs-video
  position relative
  background-size cover
  z-index 0
  display flex
  flex-direction column
  align-items center
  justify-content center
  width 60px
  height 80px
  overflow hidden
  cursor pointer
  margin-top 20px
  svg
    width 15px
    height 15px
    stroke gray-2
    stroke-width 3px
    fill white
    margin-bottom 6px
  span
    font-weight 500
    font-size 10px
    line-height 120%
    text-transform uppercase
    color gray-2

.card-views__display
  position relative

.card-views__display-arrow
  position absolute
  top 50%
  transform translateY(-50%)
  cursor pointer
  padding 15px
  background-color transparent
  z-index 10
  &:hover
    svg
      fill gray-2
  svg
    width 22px
    height 22px
    fill gray-5
    transition all .2s
  &.prev
    left 0
  &.next
    right 0

.card-views__display-slider
  max-width 390px
  border-radius 10px
  overflow hidden
  .slick-dots
    display flex
    justify-content center
    position absolute
    bottom 30px
    left 0
    right 0
    li
      width 6px
      height 6px
      border-radius 50%
      background-color #fff
      cursor pointer
      &.slick-active
        background-color gray-2
    li + li
      margin-left 14px