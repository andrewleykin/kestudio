.card-views
  width 100%
  max-width 650px
  flex auto
  display flex
  align-self flex-start
  flex none

.card-views__thumbs
  width 110px
  margin-right 30px

.card-views__thumbs-slider
  height 492px

.card-views__thumbs-slide
  &+&
    margin-top 20px

.card-views__thumbs-video
  position relative
  background url('../img/content/card-video-poster.jpg') center no-repeat
  background-size cover
  z-index 0
  display flex
  align-items center
  justify-content center
  width 110px
  height 108px
  border-radius 8px
  overflow hidden
  cursor pointer
  margin-top 20px
  &:after
    content ''
    display block
    position absolute
    z-index -1
    top 0
    left 0
    right 0
    bottom 0
    background-image linear-gradient(0deg, rgba(45, 45, 45, 0.54), rgba(45, 45, 45, 0.54))
  svg
    width 30px
    height 30px
    fill gray-6

.card-views__display
  position relative

.card-views__display-arrow
  position absolute
  top 50%
  transform translateY(-50%)
  cursor pointer
  padding 15px
  background-color transparent
  z-index 10
  &:hover
    svg
      fill gray-2
  svg
    width 22px
    height 22px
    fill gray-5
    transition all .2s
  &.prev
    left 0
  &.next
    right 0

.card-views__display-slider
  max-width 510px
  border-radius 10px
  overflow hidden
  .slick-dots
    display flex
    justify-content center
    position absolute
    bottom 30px
    left 0
    right 0
    li
      width 6px
      height 6px
      border-radius 50%
      background-color #fff
      cursor pointer
      &.slick-active
        background-color gray-2
    li + li
      margin-left 14px