.payment-page
  padding-top 200px
  padding-bottom 100px
  @media (max-width breakpoint-md)
    padding-top 40px
    padding-bottom 35px

.payment-page__wrap
  @media (max-width breakpoint-md)
    padding 0 15px

.payment-page__text
  text-align center
  margin-bottom 50px
  font-size 24px
  line-height 120%
  letter-spacing 1px
  color gray-1
  @media (max-width breakpoint-md)
    font-size 18px
    margin-bottom 30px
  @media (max-width breakpoint-sm)
    text-align left

.payment-page__actions
  display flex
  justify-content center
  .btn
    width 100%
    max-width 300px
    letter-spacing 1.2px
  .btn + .btn
    margin-left 50px
  @media (max-width breakpoint-md)
    display block
    .btn
      margin 0 auto
    .btn + .btn
      margin-left auto
      margin-top 20px
  @media (max-width breakpoint-sm)
    .btn
      max-width 100%

.payment-page__tabs
  padding-top 100px
  @media (max-width breakpoint-md)
    padding-top 50px

.payment-page__tab
  display none
  &.active
    display block

@import './human.styl'
@import './organization.styl'
@import './calculator.styl'
@import './actions.styl'