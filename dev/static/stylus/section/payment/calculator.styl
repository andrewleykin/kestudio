.payment-calculator
  margin-bottom 60px
  h4
    font-weight bold
    font-size 24px
    letter-spacing 1px
    color gray-1
  @media (max-width breakpoint-md)
    margin-bottom 45px
  @media (max-width breakpoint-md)
    h4
      font-size 20px
    h4.payment-calculator__total
      font-size 16px
      font-weight normal

.payment-calculator__title
  max-width 814px
  margin 0 auto 65px
  @media (max-width breakpoint-md)
    margin-bottom 40px
    span
      display none

.payment-calculator__list
  max-width 814px
  margin 0 auto 75px
  @media (max-width breakpoint-md)
    margin-bottom 50px

.payment-calculator__item
  display flex
  &+&
    margin-top 30px
  @media (max-width breakpoint-md)
    position relative
    &+&
      margin-top 40px
    &.delivery
      padding-bottom 70px
      .payment-calculator__item-count
        bottom 80px
      .payment-calculator__item-price
        bottom 85px
  @media (max-width 374px)
    &.delivery
      padding-bottom 80px

.payment-calculator__item-photo
  margin-right 25px
  width 100%
  max-width 100px
  border-radius 10px
  overflow hidden
  flex none
  &--icon
    border-radius 5px
    background-color rgba(#9B9B9B, .6)
    height 125px
    display flex
    align-items center
    justify-content center
    svg
      fill white
      width 35px
      height 31px
      &.icon-delivery-icon 
        width 55px
        height 55px
      &.icon-360-icon
        width 64px
        height 33px
  @media (max-width 374px)
    max-width 75px
    margin-right 10px
    &--icon
      height 100px
      svg
        width 25px
        height 21px
        &.icon-delivery-icon
          width 35px
          height 35px
        &.icon-360-icon
          width 44px
          height 23px

.payment-calculator__item-info
  margin-right auto
  display flex
  flex-direction column
  justify-content center
  @media (max-width breakpoint-md)
    justify-content flex-start
    margin-right 0
    width 100%

.payment-calculator__item-title
  font-size 16px
  line-height 125%
  letter-spacing 0.8px
  color gray-2
  margin-bottom 15px
  display block
  max-width 250px
  span.name
    display block
  @media (max-width breakpoint-md)
    max-width 90%
  @media (max-width 374px)
    margin-bottom 5px
    
.payment-calculator__item-desc
  font-size 14px
  line-height 125%
  letter-spacing 0.8px
  color #9B9B9B
  display flex
  &+&
    margin-top 2px
  .title
    width 220px
  .price
    margin-left 40px
  &--auto
    .title
      width auto
    .price
      margin-left 10px
  .mobile
    display none
  @media (max-width breakpoint-md)
    justify-content space-between
    max-width 200px
    width 100%
    .title
      width auto
    .price
      margin-left 0
    .desktop
      display none
    .mobile
      display block
    &--discount
      display none

.payment-calculator__item-sub
  width 130px
  margin-right 20px
  display flex
  flex-direction column
  justify-content center
  .form-group__input
    height 30px
    padding 0 10px
  .form-group__input + .form-group__input
    margin-top 10px
  @media (max-width breakpoint-md)
    position absolute
    left 120px
    bottom 0
    .form-group__input
      text-align center
  @media (max-width 374px)
    left 85px

.payment-calculator__item-sub-add
  display flex
  margin-bottom 10px
  cursor pointer
  svg
    width 18px
    height 18px
    fill #9B9B9B
    margin-right 8px
  span
    color gray-4
    letter-spacing 0.8px

.payment-calculator__item-sub-input
  display none

.payment-calculator__item-count
  width 115px
  margin-right 25px
  display flex
  align-items center
  .minus,
  .plus
    width 27px
    height 27px
    border-radius 4px
    display flex
    align-items center
    justify-content center
    cursor pointer
    svg
      fill white
      width 11px
      height 11px
  .minus
    background-color #C4C4C4
  .plus
    background-color gray-1
  .num
    min-width 26px
    margin 0 2px
    text-align center
  .form-group__input
    padding 0 10px
  @media (max-width breakpoint-md)
    position absolute
    bottom 0
    left 120px
    .form-group__input
      height 30px
      text-align center
  @media (max-width 374px)
    left 85px

.payment-calculator__item-price
  align-self center
  letter-spacing 0.8px
  min-width 67px
  @media (max-width breakpoint-md)
    position absolute
    bottom 5px
    right 20px
    min-width auto
  @media (max-width 374px)
    right 5px

.payment-calculator__item-close
  cursor pointer
  margin-left 10px
  background-color transparent
  svg
    width 20px
    height 20px
    fill gray-4
  &.hide
    display none
  @media (max-width breakpoint-md)
    position absolute
    right 0
    top 0

.payment-calculator__add
  max-width 620px 
  margin 0 auto 90px
  .select-field__item
    span
      &:before
        content: '| '
  @media (max-width breakpoint-md)
    margin-bottom 40px
    .select-field__list
      max-height 240px
      padding-left 0
      padding-top 10px
    .select-field__item
      flex-direction column
      height auto
      text-align center
      span
        display block
        text-align right
        &:before
          display none
    .select-field__item + .select-field__item
      border-top 1px solid gray-6
      margin-top 10px
      padding-top 20px

.payment-calculator__total
  display flex
  align-items center
  max-width 620px 
  margin 0 auto

.payment-calculator__total-summ
  display block
  margin-left 25px