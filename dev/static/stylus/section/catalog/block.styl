.catalog-list-block
  cursor pointer
  height 100%
  display flex
  flex-direction column

.catalog-list-block__image
  border-radius 10px
  overflow hidden
  margin-bottom auto
  max-height 360px
  img
    width 100%
  @media(max-width breakpoint-lg)
    max-height 290px
  @media (max-width breakpoint-md)
    max-height none

.catalog-list-block__row
  display flex
  align-items center
  justify-content space-between
  margin-top 10px
  @media (max-width breakpoint-md)
    margin-top 5px

.catalog-list-block__name,
.catalog-list-block__age
  font-size 18px
  letter-spacing 0.01em
  color gray-1
  @media (max-width breakpoint-md)
    font-size 12px
    color gray-2

.catalog-list-block__expirience
  font-size 12px
  letter-spacing 0.8px
  color gray-3
  @media (max-width breakpoint-md)
    font-size 9px

.catalog-list-block__price
  font-weight 500
  font-size 18px
  color gray-1
  @media (max-width breakpoint-md)
    font-size 12px
    font-weight normal
