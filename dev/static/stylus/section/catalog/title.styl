.catalog-title
  text-align center
  margin-bottom 80px
  h1
    font-weight bold
    font-size 48px
    line-height 120%
    letter-spacing 1px
    margin-bottom 25px
  p
    font-size 16px
    line-height 125%
    letter-spacing 0.8px
    color gray-3
    max-width 600px
    margin 0 auto
  @media (max-width breakpoint-md)
    margin-bottom 25px
    h1
      font-size 24px
      margin-bottom 0
    p
      display none