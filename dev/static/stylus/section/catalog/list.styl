.catalog-list__all
  display block
  text-align center
  letter-spacing 0.8px
  color gray-3
  margin-bottom 50px

.catalog-list__blocks
  display flex
  flex-wrap wrap
  margin 0 -10px 80px -11px
  @media (max-width breakpoint-md)
    margin 0 -6px 49px -7px

.catalog-list__block
  width 100%
  max-width 284px
  margin 0 10px 50px 11px
  @media(max-width breakpoint-lg)
    max-width calc(33% - 20px)
  @media (max-width breakpoint-md)
    max-width calc(50% - 13px)
    margin 0 6px 23px 7px

.catalog-list__views
  display block
  text-align center
  font-size 12px
  letter-spacing 0.5px
  color #666
  margin-bottom 25px

.catalog-list__btn
  margin 0 auto