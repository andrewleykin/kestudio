.index-services
  padding-top 200px
  padding-bottom 185px

.index-services__title
  margin-bottom 100px
  max-width 555px

.index-services__block
  max-width 1030px
  margin-left auto
  &+&
    margin-top 200px
  &--main
    .index-services__block-text
      margin-bottom 100px
    .index-services__block-price
      margin-bottom 25px

.index-services__block-title
  margin-bottom 50px

.index-services__block-subtitle
  max-width 590px
  font-weight 500
  font-size 24px
  line-height 120%
  letter-spacing 1.2px
  color gray-2
  margin-bottom 50px

.index-services__block-row
  display flex

.index-services__block-info
  max-width 320px
  margin-right 110px

.index-services__block-text 
  font-size 20px
  line-height 125%
  letter-spacing 1.2px
  color gray-1
  margin-bottom 50px

.index-services__block-price
  font-weight bold
  font-size 36px
  line-height 120%
  letter-spacing 1px
  color gray-2
  margin-bottom 50px
  display block

.index-services__block-subprice
  font-size 14px
  line-height 125%
  letter-spacing 0.8px
  color gray-4
  margin-bottom 70px

.index-services__block-image
  border-radius 10px
  overflow hidden

.index-services__block-subimage
  max-width 550px
  margin-top 50px
  padding 28px 35px 39px
  font-size 16px
  line-height 125%
  letter-spacing 0.8px
  color gray-1
  background-color gray-5
  border-radius 10px

.index-services__more
  margin 100px auto 0
  width 100%
  max-width 860px
  display flex
  flex-direction column
  align-items center
  justify-content center
  border 4px solid gray-1
  border-radius 10px
  padding 33px 0
  font-weight 500
  font-size 24px
  line-height 120%
  text-align center
  letter-spacing 1.2px
  color gray-1

.index-services__more-text
  max-width 540px
  margin-bottom 30px

.index-services__more-link
  color inherit
  padding-bottom 5px
  border-bottom 1px solid gray-1
  transition all .2s
  &:hover
    border-bottom-color transparent