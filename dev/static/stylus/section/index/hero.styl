.index-hero
  min-height auto
  height auto
  padding-top 0
  position relative
  .container
    position absolute
    top 0
    left 0
    bottom 0
    right 0
  @media (max-width breakpoint-lg)
    padding-top 0

.index-hero__video
  position relative
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  padding-top 56.25%
  &:after
    content ''
    display block
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    background-image linear-gradient(0deg, rgba(62, 58, 58, 0.5), rgba(62, 58, 58, 0.5))
  video
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.index-hero__wrap
  height 100%
  display flex
  flex-direction column
  justify-content flex-end
  padding-bottom 145px

.index-hero__title
  max-width 720px