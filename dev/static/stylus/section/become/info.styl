.become-info
  padding-top 100px
  margin-bottom 200px
  @media (max-width breakpoint-md)
    padding-top 50px
    margin-bottom 100px

.become-info__title
  margin-bottom 25px
  max-width 825px

.become-info__wrap
  max-width 900px
  margin-left auto

.become-info__text
  max-width 350px
  font-size 18px
  line-height 125%
  letter-spacing 0.8px
  color gray-2
  margin-bottom 120px
  @media (max-width breakpoint-md)
    margin-bottom 60px

.become-info__accent
  font-weight bold
  font-size 36px
  line-height 120%
  letter-spacing 1px
  color #fff
  padding 78px 90px
  background-color color-red
  @media (max-width breakpoint-md)
    padding 40px 50px
    font-size 24px