.become-hero
  min-height 812px

.become-hero__wrap
  max-width 600px
  height 100%
  display flex
  flex-direction column
  justify-content center

.become-hero__title
  margin-bottom 85px
  @media (max-width breakpoint-md)
    margin-bottom 50px

.become-hero__text
  font-size 24px
  line-height 120%
  letter-spacing 1px
  color #fff
  margin-bottom 60px
  @media (max-width breakpoint-md)
    margin-bottom 130px
    font-size 20px
    max-width 70%

.become-hero__btn
  max-width 330px