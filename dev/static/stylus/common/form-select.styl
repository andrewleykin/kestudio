.form-select
  &.open
    .select-field__active
      &:after
        top 30%
  &.active
    .select-field__active
      color gray-1
  .select-field__reset.range-field__reset
    display none !important
  .select-field__active
    background-color #fff
    border 1px solid gray-5
    box-sizing border-box
    color gray-5
    height 50px
    padding 0 20px
    display flex
    align-items center
    width 100%
    &:after
      right 20px
      top 50%
      transform: translateY(-50%)
  .select-field__close
    right 18px
    top 45%
    transform: translateY(-50%)
  .select-field__item
    padding 5px 20px
    font-size 18px
    line-height 125%
  @media (max-width breakpoint-md)
    &.active
      .select-field__close
        display block
      .select-field__active
        &:after
          display none !important
    .select-field__active
      &:after
        display block !important
    .select-field__list
      position absolute
      top 100%
      max-width 100%
      max-height 195px
      border 1px solid gray-5
    .select-field__item
      border-bottom none