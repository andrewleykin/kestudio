.select-field
  position relative
  &.open
    z-index 10
    .select-field__active
      &:after
        top 4px
        transform rotate(180deg)
    .select-field__list,
    .range-field
      display block
  &.active
    .select-field__active
      &:after
        display none
    .select-field__close
      display block
  &.right
    .select-field__list
      right 0
  &[data-range="true"]
    .range-field__reset
      &.mobile
        display none
  @media (max-width breakpoint-md)
    &.open
      .select-field__reset
        display block
    &.active
      .select-field__close
        display none
    &.open[data-range="true"]
      .range-field__reset
        &.mobile
          display block

.select-field__reset
  display none

.select-field__close
  position absolute
  right 0
  top -5px
  display none
  padding 5px
  cursor pointer
  background-color transparent
  svg
    width 12px
    height 12px
    fill gray-3

.select-field__active
  letter-spacing 0.8px
  color gray-2
  display block
  padding-bottom 10px
  border-bottom 1px solid gray-5
  cursor pointer
  padding-right 20px
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  &:after
    content ''
    position absolute
    right 5px
    top 6px
    display block
    width 12px
    height 12px
    background-size contain
    background-repeat no-repeat
    background-image url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 1.99997L10.59 0.589966L6 5.16997L1.41 0.589966L0 1.99997L6 7.99997L12 1.99997Z' fill='%23828282'/%3E%3C/svg%3E%0A")
  @media (max-width breakpoint-md)
    height 56px
    display flex
    align-items center
    font-size 14px
    padding 0
    &:after
      display none !important

.select-field__list
  position absolute
  top 100%
  min-width 100%
  border 1px solid gray-5
  display none
  padding 15px 0
  max-height 195px
  overflow-y auto
  background-color #fff
  @media (max-width breakpoint-md)
    position fixed
    border none
    top 61px
    right 0
    width 100%
    max-width 87%
    transform none
    min-width 278px
    max-height 100%
    padding 0 0 0 16px

.select-field__item
  cursor pointer
  display block
  padding 10px
  background-color #fff
  color gray-3
  position relative
  &:hover
    background-color gray-6
  @media (max-width breakpoint-md)
    font-size 14px
    padding 16px 0
    height 56px
    display flex
    align-items center
    border-bottom 1px solid gray-5